<!doctype html>
<html lang="en">
<head>
    <%- include('../../../partials/head.ejs'); %>
</head>


    <%- include('../../../partials/header.ejs'); %>

<body>
<main>

    <section class="p-4 p-md-5 mb-4 text-white bg-dark img-hero">
        <div class="container">
            <div class="col-md-10 px-0">
                <h1 class="display-6 fst-italic">Products</h1>
            </div>
        </div>
    </section>

    <div class="container categories">

        <div class="row py-5">
            <div class="col-md-4 offset-md-4"">
                 <form action="/admin/products/create" method="POST" enctype="multipart/form-data">
 
                     <div class="mb-3">
                         <label for="name" class="form-label">Nombre</label>
                         <input name="name" 
                                type="text" 
                                value="<%= (typeof old != 'undefined' && !name) ? old.name : '' %>"
                                class="form-control" 
                                placeholder=""
                                id="name"
                                required>
                         <small style="color: red;"><%= (typeof error != 'undefined' && error.name) ? error.name.msg : '' %></small>
                     </div>
 
                     <div class="mb-3">
                         <label for="price" class="form-label">Precio</label>
                         <input name="price" 
                                type="text"
                                value="<%= (typeof old != 'undefined' && !errors.price) ? old.price : '' %>" 
                                class="form-control" 
                                placeholder=""
                                id="price"
                                required>
                         <small style="color: red;"><%= (typeof error != 'undefined' && error.price) ? error.price.msg : '' %></small>
                     </div>
 
                     <div class="mb-3">
                         <label for="flavorLimit" class="form-label">Limite de Sabores</label>
                         <input name="flavorLimit" 
                                type="number"
                                value="<%= (typeof old != 'undefined' && !errors.flavorLimit) ? old.flavorLimit : '' %>"  
                                class="form-control" 
                                placeholder=""
                                id="flavorLimit"
                                required>
                         <small style="color: red;"><%= (typeof error != 'undefined' && error.flavorLimit) ? error.flavorLimit.msg : '' %></small>
                     </div>
 
                     <div class="mb-3">
                         <label for="status" class="form-label">Status</label>
                             <select name="status" class="form-select" aria-label="Default select example">
                             <option value="">Seleccione</option>
                             <option value="1">Active</option>
                             <option value="0">Not Active</option>
                         </select>
                         <small style="color: red;"><%= (typeof error != 'undefined' && error.status) ? error.status.msg : '' %></small>
                     </div>
 
                     <div class="mb-3 card">
                         <label for="photo" class="form-label">Foto</label>
                         <input name="photo" type="file" class="form-control-file" id="photo">
                         <small style="color: red;"><%= (typeof error != 'undefined' && error.photo) ? error.photo.msg : '' %></small>
                     </div>
 
                     <div class="mb-3">
                        <a href="/admin/products" class="btn btn-secondary mb-3">Cancelar</a>
                         <button type="submit" class="btn btn-primary mb-3">Crear Producto</button>
                     </div>
 
                 </form>
             </div>
         </div>

    </div><!-- /.container -->

</main>

<%- include('../../../partials/footer.ejs') %>

</body>
</html>