<body>
<main>

    <section class="p-4 p-md-5 mb-4 text-white bg-dark img-hero">
        <div class="container">
            <div class="col-md-10 px-0">
                <h1 class="display-6 fst-italic">Tienda</h1>
            </div>
        </div>
    </section>

    <div class="py-5 container">
        <div class="col-md-12">
            <div class="row">
                
                <!-- ice cream sizes and categories -->
                <div class="col-8">
                    
                    <div class="container">
                        <div class="row">

                            <div class="d-flex justify-content-center categories-title">
                                <h2>Tus direcciones</h2>
                            </div>
                            
                            <table class="table">
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                                            <label class="form-check-label" for="flexCheckChecked">
                                              Digital Street 1001, Belgrano, CABA, AR
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                                            <label class="form-check-label" for="flexCheckChecked">
                                                Digital Street 1002, Belgrano, CABA, AR
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            
                
                        </div><!-- /.row -->
                        
                    </div><!-- end sizes -->

                    <!-- categories -->
                    <div class="container">
                        <div class="row">
                            <div class="d-flex justify-content-center categories-title">
                                <h2>Nueva dirección</h2>
                            </div>

                            <form method="POST" action="/address">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="streetName" class="form-label">Calle</label>
                                        <input name="streetName" type="text" class="form-control" id="name">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="streetNumber" class="form-label">Número</label>
                                        <input name="streetNumber" type="text" class="form-control" id="last-name">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="location" class="form-label">Zona</label>
                                        <select id="location" class="form-control">
                                            <option value="">Selecciona una zona</option>
                                            <option value="Belgrano">Belgrano</option>
                                            <option value="Colegiales">Colegiales</option>
                                            <option value="Coghlan">Coghlan</option>
                                            <option value="Nuñez">Nuñez</option>
                                            <option value="Palermo">Palermo</option>
                                            <option value="Recoleta">Recoleta</option>
                                            
                                          </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="city" class="form-label">Ciudad</label>
                                        <input name="city" type="text" class="form-control" id="city" value="Buenos Aires" disabled>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="country" class="form-label">Pais</label>
                                        <input name="country" type="text" class="form-control" id="country" value="Argentina" disabled>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="phoneNumber" class="form-label">Teléfono</label>
                                        <input name="phoneNumber" type="text" class="form-control" id="phoneNumber">
                                    </div>
                                </div>    
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary">Continuar</button>
                                </div>
                            </form>
                            
                        </div>
                      </div>
                    <!-- end categories -->
                </div> <!-- ice cream sizes and categories -->

                <!-- cart -->
                <div class="col-4">
                    <div class="card">
                        <table class="table">
                            <tr>
                                <td><img src="/images/contact-map.jpg" alt="" width="32px" height="32px"></td>
                                <td><p><small>Descripcion del producto</small></p></td>
                                <td><p>650</p></td>
                            </tr>
                            <tr>
                                <td><img src="/images/contact-map.jpg" alt="" width="32px" height="32px"></td>
                                <td><p><small>Descripcion del producto</small></p></td>
                                <td><p>650</p></td>
                            </tr>
                        </table>
                        <div class="card-body">
                            <div class="card-subtitle mb-2 text-muted">
                                <h6>Subtotal</h6>
                            </div>
                            <h5 class="card-title">Total</h5>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="button">Comprar</button>
                    </div>
                </div> <!-- end cart -->
            </div>
        </div>
    </div><!-- /.container -->
</main>

<%- include('../../partials/footer.ejs') %>

</body>
</html>