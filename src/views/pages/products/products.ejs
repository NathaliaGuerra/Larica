<!doctype html>
<html lang="en">
<head>
    <%- include('../../partials/head.ejs'); %>
</head>


    <%- include('../../partials/header.ejs'); %>

<body>
<main>

    <section class="p-4 p-md-5 mb-4 text-white bg-dark img-hero">
        <div class="container">
            <div class="col-md-10 px-0">
                <h1 class="display-6 fst-italic">Helados</h1>
            </div>
        </div>
    </section>


    <div class="container categories">

        <!-- Three columns of text below the carousel -->
        <div class="row py-5">
            <% if(typeof flavors != "undefined") { %>
                <% for(let j=0; j < flavors.length; j++) { %>
                    <div class="col-lg-4">
                        <a href="#"
                           data-bs-toggle="modal"
                           data-bs-target="#flavorModal<%= flavors[j].id %>">
                            <img src="/images/ProductsImg/<%= flavors[j].photo %>" alt="<%= flavors[j].name %>" class="bd-placeholder-img rounded-circle" width="200" height="200">
                            <h5><%= flavors[j].name %></h5>
                        </a>
                    </div><!-- /.col-lg-4 -->

                    <!-- Modal -->
                    <div class="modal fade" id="flavorModal<%= flavors[j].id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                        <div class="modal-content" style="color: black;">
                            <div class="modal-header">
                            
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                            
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-6 d-flex justify-content-center">
                                            <img src="/images/ProductsImg/<%= flavors[j].photo %>" alt="" class="bd-placeholder-img rounded-circle" width="200" height="200">
                                            
                                        </div><!-- /.col-lg-6 -->
                                        <div class="col-lg-6">
                                            
                                            <h3><%= flavors[j].name %></h3>
                                            <h6 class="text-muted"><%= flavors[j].description %></h6>
                                            
                                        </div><!-- /.col-lg-6 -->
                                    </div>
                                </div>
                
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                        </div>
                    </div>
                <% } %>
            <% } %>

        </div><!-- /.row -->
        

    </div><!-- /.container -->

</main>

<%- include('../../partials/footer.ejs') %>

</body>
</html>